<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardColor">@color/colorCardBackgroundWhite</item>
        <item name="backgroundColor">@color/colorBackgroundWhite</item>
        <item name="textDefaultColor">@color/black</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardColor">@color/colorCardBackgroundGray</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="textDefaultColor">@color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Black">
        <item name="android:windowBackground">@color/colorBackgroundGray</item>
        <item name="backgroundColor">@color/colorBackgroundGray</item>
    </style>

    <style name="LauncherTheme" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="LauncherTheme.Black" parent="@style/AppTheme.Black">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="LauncherTheme.Dark" parent="@style/LauncherTheme.Black">
        <item name="backgroundColor">@color/colorBackgroundGray</item>
    </style>

</resources>
