<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseDialogStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:paddingLeft">19dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="WidgetDialogStyle" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="SearchSnack" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/cardview_dark_background</item>
    </style>

    <style name="SearchSnack.TextView" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.Dark" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/actionBarGray</item>
    </style>
</resources>
